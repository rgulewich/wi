#!/bin/bash

DOC_DIR=docs
WI_PATH=${WI_PATH:=$HOME/.wi/wiki}
DOC_PATH=$WI_PATH/$DOC_DIR
INDEX_PATH=$WI_PATH/index

function mkp {
    mkdir -p $1
}

function init {
    mkp $WI_PATH
    mkp $DOC_PATH
    cd $WI_PATH

    # XXX: check that we have git
    # XXX: suppress this msg?
    [[ ! -e $WI_PATH/.git ]] && git init
    [[ -z "$EDITOR" ]] && EDITOR=vim
}

function usage {
    me=$(basename $0)
cat - <<EOF
Usage:
    $me <topic>             Create or edit topic
    $me --list              List all topics

EOF
    exit 0
}

function edit {
    file=$DOC_DIR/$1.md
    mode=create
    [[ -e $file ]] && mode=update
    $EDITOR $file
    [[ ! -e $file ]] && return
    [[ $mode = "create" ]] && git add $file
    git commit -m "$1 $mode" $file
}

function run_if_command {
    if [[ $1 == "--list" ]]; then
        ls $DOC_PATH | sed -e 's/.md$//'
        exit 0
    fi
    if [[ $1 == "--cmds" ]]; then
        cat - <<EOF
--list
EOF
        ls $DOC_PATH | sed -e 's/.md$//'
        exit 0
    fi
}

[[ -z $1 ]] && usage
init
run_if_command $1
edit $1
